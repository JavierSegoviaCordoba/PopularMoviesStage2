<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayoutVideo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/LayoutStyleControlHighlightWhite">

    <ImageView
        android:id="@+id/imageViewYouTubeThumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_16"
        android:adjustViewBounds="true"
        android:contentDescription="@string/label_movie_backdrop"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_video" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dimen_8"
        android:layout_marginEnd="@dimen/dimen_8"
        android:layout_marginStart="@dimen/dimen_8"
        android:layout_marginTop="@dimen/dimen_8"
        android:alpha="0.85"
        android:background="@drawable/gradient_circle"
        android:padding="@dimen/dimen_1"
        app:srcCompat="@drawable/ic_play_circle_outline_black_64dp"
        android:tint="@android:color/white"
        android:contentDescription="@string/play_button" />

    <FrameLayout
        android:id="@+id/frameLayoutUpperDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/dimen_48"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginRight="@dimen/dimen_48"
        android:layout_marginStart="@dimen/dimen_48"
        android:background="@color/md_secondary_text_icons_white"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/frameLayoutBottomDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dimen_48"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginRight="@dimen/dimen_48"
        android:layout_marginStart="@dimen/dimen_48"
        android:background="@color/md_secondary_text_icons_white"
        android:visibility="gone" />

</RelativeLayout>